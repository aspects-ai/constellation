#!/usr/bin/env node

/**
 * ConstellationFS CLI
 * 
 * Unified CLI for ConstellationFS operations including:
 * - Cross-platform native library building
 * - Path discovery for built artifacts
 * - Docker execution helpers
 */

import { dirname, join } from 'path'
import { fileURLToPath } from 'url'

const __filename = fileURLToPath(import.meta.url)
const __dirname = dirname(__filename)

// Import CLI modules
const { main } = await import(join(__dirname, '..', 'cli', 'index.js'))

try {
  await main(process.argv.slice(2))
} catch (error) {
  console.error('ConstellationFS CLI Error:', error.message)
  process.exit(1)
}